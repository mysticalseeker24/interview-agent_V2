# TalentSync Transcription Service Environment Variables

# Groq API Configuration (for both STT and TTS)
GROQ_API_KEY=your_groq_api_key_here
GROQ_BASE_URL=https://api.groq.com/openai/v1
GROQ_STT_MODEL=whisper-large-v3
GROQ_TTS_MODEL=playai-tts
GROQ_DEFAULT_VOICE=Briggs-PlayAI

# Server Configuration
HOST=0.0.0.0
PORT=8005
WORKERS=1

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./transcription_service.db
DATABASE_ECHO=false

# File Storage Configuration
UPLOAD_DIR=./uploads
TTS_CACHE_DIR=./tts_cache
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=webm,mp3,wav,m4a,ogg

# Chunk Configuration
DEFAULT_OVERLAP_SECONDS=2.0
MAX_CHUNK_DURATION=300

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Integration URLs
MEDIA_SERVICE_URL=http://localhost:8003
INTERVIEW_SERVICE_URL=http://localhost:8006
FEEDBACK_SERVICE_URL=http://localhost:8010

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9005

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Cleanup Configuration
CLEANUP_INTERVAL_HOURS=24
MAX_FILE_AGE_DAYS=7

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=100

# CORS
CORS_ORIGINS=* 