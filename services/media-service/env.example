# TalentSync Media Service Environment Configuration

# App Configuration
APP_NAME=TalentSync Media Service
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8002
WORKERS=1

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./media_service.db
DATABASE_ECHO=false

# File Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS_STR=webm,mp3,wav,m4a,ogg

# Chunk Configuration
DEFAULT_OVERLAP_SECONDS=2.0
MAX_CHUNK_DURATION=300

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Integration URLs
TRANSCRIPTION_SERVICE_URL=http://localhost:8005
INTERVIEW_SERVICE_URL=http://localhost:8006
RESUME_SERVICE_URL=http://localhost:8004

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9002

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Cleanup Configuration
CLEANUP_INTERVAL_HOURS=24
MAX_FILE_AGE_DAYS=30 